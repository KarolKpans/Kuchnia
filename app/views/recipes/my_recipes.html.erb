<body class="bg-light" style="background-image: url('<%= asset_path('jedzenie.jpg') %>'); background-size: cover; background-position: center; background-attachment: fixed;">
<div class="container py-5">
  <h1 class="text-center mb-5 text-white">Moje przepisy</h1>

  <% if @recipes.any? %>
    <div class="row g-4 justify-content-center">
      <% @recipes.each do |recipe| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0 transition hover-shadow">
            <% if recipe.image.attached? %>
              <%= image_tag recipe.image.variant(resize_to_limit: [400, 400]),
                            class: "card-img-top object-fit-cover",
                            alt: recipe.title,
                            style: "height:220px;" %>
            <% else %>
              <div class="d-flex align-items-center justify-content-center bg-light text-muted"
                   style="height:220px;">
                Brak zdjęcia
              </div>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title mb-3"><%= recipe.title %></h5>

              <div class="text-muted small mb-2">
                <%= recipe.category&.name || "Bez kategorii" %>
              </div>

              <p class="card-text text-muted mb-4 flex-grow-1">
                <%= truncate(recipe.description, length: 120, separator: ' ') %>
              </p>

              <div class="mt-auto d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                  <%= recipe.preparation_time %> min
                </span>

                <div class="d-flex gap-2">
                  <%= link_to "Zobacz", recipe,
                              class: "btn btn-sm fw-semibold text-white",
                              style: "background: linear-gradient(135deg, #007bff, #66b2ff); border: none; transition: all 0.2s; box-shadow: 0 2px 5px rgba(0,0,0,0.15);" %>

                  <%= link_to "Edytuj", edit_recipe_path(recipe),
                              class: "btn btn-sm fw-semibold text-white",
                              style: "background: linear-gradient(135deg, #28a745, #85e085); border: none; transition: all 0.2s; box-shadow: 0 2px 5px rgba(0,0,0,0.15);" %>

                  <%= button_to "Usuń", recipe_path(recipe),
                                method: :delete,
                                data: { turbo_confirm: "Na pewno chcesz usunąć ten przepis?" },
                                class: "btn btn-sm fw-semibold text-white",
                                style: "background: linear-gradient(135deg, #dc3545, #ff6b6b); border: none; transition: all 0.2s; box-shadow: 0 2px 5px rgba(0,0,0,0.15);" %>
                </div>

              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <h4 class="text-white mb-4">Nie dodałeś jeszcze żadnego przepisu...</h4>

      <%= link_to "Dodaj pierwszy przepis", new_recipe_path,
                  class: "btn fw-semibold text-white", style: "background: linear-gradient(135deg, #28a745, #85e085); border: none;" %>
    </div>
  <% end %>
</div>