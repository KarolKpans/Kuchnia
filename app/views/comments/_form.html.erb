<%= form_with model: [recipe, comment],
              url: create_comment_recipe_path(recipe),
              data: { turbo_frame: "new_comment_form" } do |f| %>

  <div class="mb-3">
    <%= f.text_area :comment,
                    rows: 4,
                    class: "form-control",
                    placeholder: "Dodaj komentarz...",
                    required: true %>
  </div>


  <div class="d-flex justify-content-center">
    <%= f.submit "Dodaj komentarz", class: "btn text-white", style: "background: linear-gradient(135deg, #28a745, #85e085);" %>
  </div>

  <% if comment.errors.any? %>
    <div class="alert alert-danger mt-3">
      <%= comment.errors.full_messages.to_sentence %>
    </div>
  <% end %>

<% end %>
