<turbo-frame id="comment_<%= comment.id %>">

  <%= form_with model: comment,
                url: update_comment_recipe_path(recipe, comment_id: comment.id),
                method: :patch do |f| %>

    <div class="mb-2">
      <%= f.text_area :comment,
                      rows: 4,
                      class: "form-control",
                      autofocus: true %>
    </div>

    <div class="d-flex gap-2">
      <%= f.submit "Zapisz",
                   class: "btn btn-sm fw-semibold text-white",
                   style: "background: linear-gradient(135deg, #28a745, #85e085); border: none; transition: all 0.2s; box-shadow: 0 2px 5px rgba(0,0,0,0.15);" %>

      <%= link_to "Anuluj",
                  recipe_path(recipe),
                  data: { turbo_frame: "comment_#{comment.id}" },
                  class: "btn btn-sm fw-semibold text-white",
                  style: "background: linear-gradient(135deg, #dc3545, #ff6b6b); border: none; transition: all 0.2s; box-shadow: 0 2px 5px rgba(0,0,0,0.15);" %>
    </div>

  <% end %>

</turbo-frame>
